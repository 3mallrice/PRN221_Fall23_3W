<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BL3w_GroupProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BL3w_GroupProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">BL3w_GroupProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Admin/ManageAccount/ListAccount">Account</a>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn btn-link dropdown-toggle" type="button" id="lotDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Product
                            </button>
                            <div class="dropdown-menu" aria-labelledby="lotDropdown">
                                <a class="dropdown-item" asp-area="" asp-page="/Admin/ManageProduct/ListProduct">Product</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Admin/ManageCategory/ListCategory">Category</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Admin/ManageStorage/ListStorage">Storage Area</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn btn-link dropdown-toggle" type="button" id="lotDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Lot
                            </button>
                            <div class="dropdown-menu" aria-labelledby="lotDropdown">
                                <a class="dropdown-item" asp-area="" asp-page="/Admin/ManageLot/ListLot">Lot</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Admin/ManageLotDetail/ListLotDetail">Lot Detail</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Admin/ManagePartner/ListPartner">Partner</a>
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn btn-link dropdown-toggle" type="button" id="lotDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Stock
                            </button>
                            <div class="dropdown-menu" aria-labelledby="lotDropdown">
                                <a class="dropdown-item" asp-area="" asp-page="/Admin/ManageStockOut/ListStockOut">Stock Out</a>
                                <a class="dropdown-item" asp-area="" asp-page="/Admin/ManageStockOutDetail/ListStockOutDetail">Stock Out Detail</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BL3w_GroupProject - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
