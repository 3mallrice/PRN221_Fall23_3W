@page
@model BL3w_GroupProject.Pages.PartnerPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Partner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Partner.PartnerId" />
            <div class="form-group">
                <label asp-for="Partner.PartnerCode" class="control-label"></label>
                <input asp-for="Partner.PartnerCode" class="form-control" />
                <span asp-validation-for="Partner.PartnerCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Partner.Name" class="control-label"></label>
                <input asp-for="Partner.Name" class="form-control" />
                <span asp-validation-for="Partner.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Partner.Status" class="control-label"></label>
                <select asp-for="Partner.Status" class="form-control">
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
                <span asp-validation-for="Partner.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
