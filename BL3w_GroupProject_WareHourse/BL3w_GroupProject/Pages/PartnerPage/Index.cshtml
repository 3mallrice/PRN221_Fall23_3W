@page
@model BL3w_GroupProject.Pages.PartnerPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Partner[0].PartnerCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Partner[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Partner[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@{
    int serialNumber = 1;
}
@foreach (var item in Model.Partner) {
        <tr>
            <td>
                @serialNumber
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartnerCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @if (item.Status == 1)
                    {
                        <span>Active</span>
                    }
                    else if (item.Status == 0)
                    {
                        <span>Inactive</span>
                    }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PartnerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PartnerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PartnerId">Delete</a>
            </td>
        </tr>
            serialNumber++;
}
    </tbody>
</table>
