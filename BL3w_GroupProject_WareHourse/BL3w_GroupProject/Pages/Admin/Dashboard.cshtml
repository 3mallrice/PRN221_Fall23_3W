@page
@model BL3w_GroupProject.Pages.Admin.DashboardModel
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<style>
    .group-box {
        border-radius: 8px;
        background-color: #51b848;
        text-align: center;
        padding: 10px;
        margin: 10px;
        color: white;
        font-weight: bold;
    }

        .group-box p {
            margin: 0;
            font-size: 20px;
        }

        .group-box:hover {
            background-color: #034ea2;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-2">
            <fieldset class="group-box">
                <legend>Products</legend>
                <p>@Model.ProductCount</p>
            </fieldset>
        </div>
        <div class="col-md-2">
            <fieldset class="group-box">
                <legend>Lots</legend>
                <p>@Model.LotCount</p>
            </fieldset>
        </div>
        <div class="col-md-2">
            <fieldset class="group-box">
                <legend>Accounts</legend>
                <p>@Model.AccountCount</p>
            </fieldset>
        </div>
        <div class="col-md-2">
            <fieldset class="group-box">
                <legend>Partners</legend>
                <p>@Model.PartnerCount</p>
            </fieldset>
        </div>
        <div class="col-md-2">
            <fieldset class="group-box">
                <legend>Categories</legend>
                <p>@Model.CategoryCount</p>
            </fieldset>
        </div>
        <div class="col-md-2">
            <fieldset class="group-box">
                <legend>StockOuts</legend>
                <p>@Model.StockOutCount</p>
            </fieldset>
        </div>
    </div>
    <div class="row _chart">
        <div class="col-md-5" style="background-color: lightgray">
            <div>
                <h4 class="text-center">Compare StockOut & Lot</h4>
                <canvas id="chart1"></canvas>
            </div>
        </div>
        <div class="col-md-5">
            <div>
                <canvas id="chart2"></canvas>
            </div>
        </div>
    </div>
</div>

<script>
    const ctx = document.getElementById('chart1');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['StockOut', 'Lot'],
            datasets: [{
                label: 'Compare StockOut & Lot',
                data: [@Model.StockOutCount, @Model.LotCount],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
