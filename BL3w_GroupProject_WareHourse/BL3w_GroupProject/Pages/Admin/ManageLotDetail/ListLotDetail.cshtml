@page
@model BL3w_GroupProject.Pages.Admin.ManageLotDetail.ListLotDetailModel

@{
    ViewData["Title"] = "ListLotDetail";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>ListLotDetail</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="post">
    <select name="SearchBy">
        <option value="LotCode">Search by LotCode</option>
        <option value="ProductCode">Search by ProductCode</option>
    </select>
    <input type="text" asp-for="Keyword" />
    <button type="submit" class="btn-primary">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LotDetail[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LotDetail[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LotDetail[0].Lot.LotCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LotDetail[0].Partner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LotDetail[0].Product.ProductCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LotDetail) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                    @if (item.Status == 1)
                    {
                        <span class="text-success">Active</span>
                    }
                    else if (item.Status == 0)
                    {
                        <span class="text-danger">Inactive</span>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lot.LotCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Partner.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductCode)
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    .horizontal-pagination {
        display: flex;
        justify-content: center;
    }

        .horizontal-pagination ul {
            list-style: none;
            display: flex;
            padding: 0;
            margin: 0;
        }

        .horizontal-pagination li {
            margin-right: 5px;
        }
</style>

<div class="horizontal-pagination">
    <ul>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="@(i == Model.PageIndex ? "active" : "")">
                <a asp-page="./ListAccount" asp-route-pageIndex="@i">@i</a>
            </li>
        }
    </ul>
</div>