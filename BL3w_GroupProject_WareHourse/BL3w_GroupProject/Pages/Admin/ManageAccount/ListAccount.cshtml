@page
@model BL3w_GroupProject.Pages.Admin.ManageAccount.ListAccountModel

@{
    ViewData["Title"] = "ListAccount";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>List Account</h1>

<p>
    <a asp-page="AccountCreate">Create New Account</a>
</p>
<form method="post">
    <select name="SearchBy">
        <option value="AccountCode">Search by AccountCode</option>
        <option value="Email">Search by Email</option>
    </select>
    <input type="text" asp-for="Keyword" />
    <button type="submit" class="btn-primary">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].AccountCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Account) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                    @if (item.Role == 0)
                    {
                        <span>Admin</span>
                    }
                    else if (item.Role == 1)
                    {
                        <span>StoreKeeper</span>
                    }
                    else
                    {
                        <span>Manager</span>
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    @if (item.Status == 1)
                    {
                        <span class="text-success">Active</span>
                    }
                    else if (item.Status == 0)
                    {
                        <span class="text-danger">Banned</span>
                    }
            </td>
            <td>
                    @if (item.Status == 1)
                    {
                        <a asp-page="./UpdateStatusAccount" asp-route-id="@item.AccountId">Ban</a>
                    }
                    else if (item.Status == 0)
                    {
                        <a asp-page="./UpdateStatusAccount" asp-route-id="@item.AccountId">Active</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    .horizontal-pagination {
        display: flex;
        justify-content: center;
    }

        .horizontal-pagination ul {
            list-style: none;
            display: flex;
            padding: 0;
            margin: 0;
        }

        .horizontal-pagination li {
            margin-right: 5px;
        }
</style>

<div class="horizontal-pagination">
    <ul>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="@(i == Model.PageIndex ? "active" : "")">
                <a asp-page="./ListAccount" asp-route-pageIndex="@i">@i</a>
            </li>
        }
    </ul>
</div>