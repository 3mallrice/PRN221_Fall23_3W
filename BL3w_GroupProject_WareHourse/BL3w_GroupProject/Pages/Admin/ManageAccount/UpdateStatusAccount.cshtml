@model BL3w_GroupProject.Pages.Admin.ManageAccount.UpdateStatusAccountModel

@{
    ViewData["Title"] = "UpdateStatusAccount";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Update Status Account</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.AccountCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.AccountCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Role)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Status)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Account.AccountId" />

        @if (Model.Account.Status == 1)
        {
            <input type="hidden" asp-for="Account.Status" value="1" />
            <input type="submit" value="Ban" class="btn btn-danger" />
        }
        else if (Model.Account.Status == 0)
        {
            <input type="hidden" asp-for="Account.Status" value="0" />
            <input type="submit" value="Activate" class="btn btn-success" />
        }
        |
        <a asp-page="./ListAccount">Back to List</a>
    </form>
</div>
