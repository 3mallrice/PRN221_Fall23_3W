@page
@model BL3w_GroupProject.Pages.Manager.LotPage.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutManager";
}

<h1>Create</h1>

<h4>Lot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Account Name</label>
                <select asp-for="Lot.AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lot.PartnerId" class="control-label"></label>
                <select asp-for="Lot.PartnerId" class ="form-control" asp-items="ViewBag.PartnerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Lot.LotCode" class="control-label"></label>
                <input asp-for="Lot.LotCode" class="form-control" />
                <span asp-validation-for="Lot.LotCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lot.DateIn" class="control-label"></label>
                <input asp-for="Lot.DateIn" class="form-control" />
                <span asp-validation-for="Lot.DateIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lot.Note" class="control-label"></label>
                <input asp-for="Lot.Note" class="form-control" />
                <span asp-validation-for="Lot.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
