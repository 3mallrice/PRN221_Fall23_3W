@page
@model BL3w_GroupProject.Pages.Manager.CategoryPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.CategoryId" />
            <div class="form-group">
                <label asp-for="Category.CategoryCode" class="control-label"></label>
                <input asp-for="Category.CategoryCode" class="form-control" />
                <span asp-validation-for="Category.CategoryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <a asp-page="./Index" class="btn text-white" style="background-color: #F37021"><i class="fa-solid fa-right-from-bracket"></i></a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var duplicateError = '@ViewData["Error"]';
        if (duplicateError) {
            showErrorPopup(duplicateError);
        }

        function showErrorPopup(errorMessage) {
            alert(errorMessage);
        }

        function validateProductCode() {
            var productCodeInput = document.getElementById("Category_CatedoryCode");
            var productCodeValue = productCodeInput.value.trim();
            var regex = /^part\d{3}$/i;

            if (!regex.test(productCodeValue)) {
                alert("Category Code must start with 'part' or 'PART' followed by 3 digits.");
                productCodeInput.focus();
                return false;
            }

            return true;
        }

        document.querySelector('form').addEventListener('submit', function (event) {
            if (!validateProductCode()) {
                event.preventDefault();
            }
        });
    </script>
}
