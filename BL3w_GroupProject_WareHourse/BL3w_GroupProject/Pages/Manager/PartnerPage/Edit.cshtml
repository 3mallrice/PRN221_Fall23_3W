@page
@model BL3w_GroupProject.Pages.Manager.PartnerPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Partner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Partner.PartnerId" />
            <div class="form-group">
                <label asp-for="Partner.PartnerCode" class="control-label"></label>
                <input asp-for="Partner.PartnerCode" class="form-control" />
                <span asp-validation-for="Partner.PartnerCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Partner.Name" class="control-label"></label>
                <input asp-for="Partner.Name" class="form-control" />
                <span asp-validation-for="Partner.Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="Partner.Status" class="control-label"></label>
                <select asp-for="Partner.Status" class="form-control">
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
                <span asp-validation-for="Partner.Status" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var duplicateError = '@ViewData["Error"]';
        if (duplicateError) {
            showErrorPopup(duplicateError);
        }

        function showErrorPopup(errorMessage) {
            alert(errorMessage);
        }

        function validateProductCode() {
            var productCodeInput = document.getElementById("Partner_PartnerCode");
            var productCodeValue = productCodeInput.value.trim();
            var regex = /^part\d{3}$/i;

            if (!regex.test(productCodeValue)) {
                alert("Partner Code must start with 'part' or 'PART' followed by 3 digits.");
                productCodeInput.focus();
                return false;
            }

            return true;
        }

        document.querySelector('form').addEventListener('submit', function (event) {
            if (!validateProductCode()) {
                event.preventDefault();
            }
        });
    </script>
}

